{
  "name": "aave-sandbox",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@aave/protocol-v2": "github:aave/protocol-v2#b533f961d2ee4dbc0b86e4002fea30c487ad3fab",
    "@nomiclabs/hardhat-ethers": "^2.0.3",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.0.0",
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.13",
    "bluebird": "^3.7.2",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "env-cmd": "^10.1.0",
    "ethers": "^5.5.2",
    "hardhat": "^2.8.0",
    "hardhat-dependency-compiler": "^1.1.2",
    "hardhat-deploy": "^0.9.14",
    "ts-node": "^10.4.0",
    "typechain": "^6.0.5",
    "typescript": "^4.5.4"
  },
  "scripts": {
    "compile": "SKIP_LOAD=true hardhat compile",
    "node:subtask": "env-cmd --use-shell \"hardhat node --fork https://eth-mainnet.alchemyapi.io/v2/${ALCHEMY_KEY} --fork-block-number 13810000\"",
    "node": "env-cmd --use-shell \"npm run node:subtask\"",
    "node:fork:arc": "MARKET=arc npm run node",
    "node:fork:main": "MARKET=main npm run node",
    "feed-market:arc": "hardhat --network localhost feed-market --market arc",
    "feed-market:main": "hardhat --network localhost feed-market --market main",
    "feed-accounts:arc": "hardhat --network localhost feed-accounts --market arc",
    "feed-accounts:main": "hardhat --network localhost feed-accounts --market main",
    "print-accounts:arc": "hardhat --network localhost print-accounts --market arc",
    "print-accounts:main": "hardhat --network localhost print-accounts --market main"
  }
}
